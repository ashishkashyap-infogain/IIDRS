            let data = {}
            getId(row);
            for (let col = 0; col < headings.length - 1; col++) {
                let colData = row.eq(col).text();
                data[headings[col]] = colData
            }

            return data;
        }
        //for delete of row
        function getId(row) {
            addedInLast = false

            let headings = ["PERSON_UID"]

            let data = {}

            data[headings[0]] = row.text();

            return data
        }

        function getEId(row) {
